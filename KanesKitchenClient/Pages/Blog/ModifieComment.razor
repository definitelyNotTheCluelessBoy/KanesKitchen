@page "/modify-comment/{CommentId:int}"
@inject NavigationManager NavigationManager
@inject ICommentService CommentService
@inject IJSRuntime JS
@inject IStringLocalizer<CommentResource> commentResource
@inject IStringLocalizer<PostResource> postResource

<h3 class="mb-4">@commentResource["ModifyHeader"]</h3>

<div class="card shadow-sm mb-4" style="max-width: 700px;">
    <div class="card-body">
        <EditForm Model="commentContent" OnValidSubmit="HandleValidSubmit" class="row g-3">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" />

            <!-- Comment Content -->
            <div class="col-12">
                <label class="form-label fw-bold">@postResource["Content"]</label>
                <InputTextArea @bind-Value="commentContent" class="form-control" rows="5" />
            </div>

            <!-- Action Buttons -->
            <div class="col-12 mt-3 d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">@commentResource["UpdateButton"]</button>
                <button type="button" class="btn btn-danger" @onclick="HandleDelete">@commentResource["DeleteButton"]</button>
            </div>
        </EditForm>
    </div>
</div>

@if (!string.IsNullOrEmpty(statusMessage))
{
    <div class="alert alert-info">
        <pre class="m-0">@statusMessage</pre>
    </div>
}

@code {
    [Parameter]
    public int CommentId { get; set; }

    private string commentContent = string.Empty;
    private string statusMessage = string.Empty;
    private int postId;

    protected override async Task OnInitializedAsync()
    {
        var comment = await CommentService.GetCommentAsync(CommentId);
        if (comment != null)
        {
            commentContent = comment.Content;
            postId = comment.PostId;
        }
    }

    private async Task HandleValidSubmit()
    {
        statusMessage = string.Empty;
        try
        {
            var result = await CommentService.UpdateCommentAsync(CommentId, commentContent);
            statusMessage = $"Comment update complete with result: {result}";
        }
        catch (Exception ex)
        {
            statusMessage = $"Error updating comment: {ex.Message}";
        }
    }

    private async Task HandleDelete()
    {
        bool confirm = await JS.InvokeAsync<bool>("confirm", $"Are you sure you want to delete this comment?");
        if (confirm)
        {
            var result = await CommentService.DeleteCommentAsync(CommentId);
            if (result.StatusCode == System.Net.HttpStatusCode.OK)
            {
                statusMessage = "Comment deleted successfully.";
                NavigationManager.NavigateTo($"/post/{postId}");
            }
            else
            {
                statusMessage = "Failed to delete the comment.";
            }
        }
    }
}
